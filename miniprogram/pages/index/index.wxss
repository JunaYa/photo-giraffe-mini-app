.info-bar {
    width: 100%;
    height: 38rpx;
    background: #6bb6b0;
  }
  .c-toolbar-header {
    height: 48rpx;
    padding: 20rpx;
    background: #71BCB6;
    box-shadow: 0 4rpx 1rpx rgba(0, 0, 0, .15);
    display: flex;
  }
  .btn {
    color: #ffffff;
    font-size: 26rpx;
    background: #509993;
    padding: 0 28rpx;
    line-height: 56rpx;
    align-self: center;
    border-radius: 06rpx;
    box-shadow: 0 8rpx 6rpx 2rpx rgba(0, 0, 0, .15);
  }
  .btn-cancel {
    margin-right: 16rpx;
  }
  .btn-delete {
    background: #d65878;
    box-shadow: 0 8rpx 6rpx 2rpx rgba(141,87,110,0.50);
  }
  .btn-confirm {
    margin-left: 24rpx;
  }
  .title {
    font-size: 32rpx;
    color: #345a54;
    text-align: center;
    align-self: center;
    margin-left: 24rpx;
    text-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, .25);
  }
canvas {
  margin: 4px auto;
}
.description {
  position: absolute;
  width: 100%;
  top: 30%;
  text-align: center;
  font-size: 28rpx;
  color: #b4b4b4;
}
.btn-float-lee {
  width: 86rpx;
  height: 86rpx;
  margin: 0 auto;
  padding: 0;
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: bold;
  border-radius: 50%;
  position: absolute;
  bottom: 32rpx;
  right: 16rpx;
  transform: translate(-50%, 0);
  text-align: center;
  background: #D65878;
  box-shadow: 4rpx 8rpx 6rpx 2rpx rgba(141,87,110,0.50);
  box-shadow: 0 0 4rpx 4rpx rgba(169,65,92,0.50);
}
  .scroll-view {
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: row;
  }

  .postcard-wrap {
    position: relative;
    display: block;
    float: right;
    text-align: center;
  }
  icon {
    position: absolute;
    top: 16rpx;
    right: 16rpx;
    z-index: 9;
  }